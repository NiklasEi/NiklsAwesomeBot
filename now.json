{
  "version": 2,
  "name": "NiklsAwesomeBot",
  "builds": [
    { "src": "index.js", "use": "@now/node-server" },
    { "src": "games/**/*", "use": "@now/static" },
    { "src": "assets/**/*", "use": "@now/static" }
  ],
  "build": {
    "env": {
      "BOT_TOKEN": "@nikls-awesome-bot-token"
    }
  },
  "env": {
    "BOT_TOKEN": "@nikls-awesome-bot-token",
    "BASE_URL": "@nikls-base-url"
  },
  "public": false,
  "regions": ["all"],
  "alias": ["@nikls-base-url", "games.nikl.me"],
  "routes": [
    { "src": "/(.*)", "dest": "index.js" },
    {"src": "/games/", "dest": "/games/"},
    {"src": "/assets/", "dest": "/assets/"}
  ]
}